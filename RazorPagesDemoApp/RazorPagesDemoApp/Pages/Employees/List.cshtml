@page
@model RazorPagesDemoApp.Pages.Employees.ListModel
@{
}
<h1 class="mb-3">List of Employees</h1>

@if(Model.Employees != null && Model.Employees.Any()){
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var employee in Model.Employees){
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                </tr>
            }
        </tbody>
    </table>
}else{
    <p>No employees found!!</p>
}